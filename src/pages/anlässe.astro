---
import LandingLayout from "../layouts/LandingLayout.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Anlässe" color="#E8E7E7">
    <LandingLayout color="#565B60" menu="/arrow-white.png" img="">
        <div
            class="flex flex-col pl-[8%] lg:pl-[12.5%] lg:bg-[#E8E7E7] lg:pr-[6%] mt-[6%]"
        >
            <div class="flex flex-col w-[92%] lg:w-5/6 text-start z-10">
                <div class="text-black">
                    <h1 class="font-head lg:text-5xl lg:leading-[70px]">
                        In einem sehr
                    </h1><h1
                        class="inline-block font-head lg:text-5xl lg:leading-[70px] text-[#0A9084]"
                    >
                        schönen
                    </h1><h1
                        class="font-head inline-block lg:text-5xl lg:leading-[70px]"
                    >
                        ,&nbsp;
                    </h1>
                    <h1
                        class="font-head inline-block lg:text-5xl lg:leading-[70px]"
                    >
                        Idyllischen
                    </h1><h1 class="font-head lg:text-5xl lg:leading-[70px]">
                        Rahmen können Sie bei uns Ihre
                    </h1><h1
                        class="font-head inline-block lg:text-5xl lg:leading-[70px] text-[#0A9084]"
                    >
                        Feste feiern
                    </h1>
                    <h1
                        class="font-head inline-block lg:text-5xl lg:leading-[70px]"
                    >
                        .
                    </h1>
                </div>
            </div>
            <img
                class="w-64 lg:w-96 absolute bottom-0 right-0 lg:right-2 z-0"
                src="/sekt.png"
                alt="Sekt"
            />
        </div>
    </LandingLayout>
</Layout>
