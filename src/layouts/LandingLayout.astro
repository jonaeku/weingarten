---
import "../styles/global.css";
export interface Props {
	color: string;
}

const { color } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
	</head>
	<body>
		<div class={`w-screen bg-[${color}] h-6`}></div>
		<div class="flex justify-center">
			<nav
				class="flex space-x-4 justify-between items-center w-3/4 text-xl font-head"
			>
				<a href="#">Unser Menü</a>
				<a href="#test">Küche</a>
				<img class={`w-64 bg-[${color}] p-4`} src="/Logo.png" />
				<a href="#">Anlässe</a>
				<a href="#">Über Uns</a>
			</nav>
		</div>
		<article>
			<slot />
			<!-- your content is injected here -->
		</article>
		<div class="flex justify-center">
			<div class={`w-screen bg-[${color}] h-6 absolute bottom-0`}></div>
			<div
				class={`w-12 bg-[#E8E7E7] h-12 absolute bottom-0 rounded-full flex justify-center`}
			>
				<img class="w-8 object-contain" src="/arrow-black.png" />
			</div>
		</div>
		<style>
			body {
				height: 100vh;
			}
		</style>
	</body>
</html>
